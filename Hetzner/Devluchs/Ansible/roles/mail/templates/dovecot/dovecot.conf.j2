listen = *
protocols = imap lmtp
mail_location = maildir:~/Maildir
auth_mechanisms = plain login
ssl = required
ssl_cert = </etc/letsencrypt/live/{{ postfix_dovecot_cert_name | default(certbot_domains | default([]) | first | default(inventory_hostname)) }}/fullchain.pem
ssl_key = </etc/letsencrypt/live/{{ postfix_dovecot_cert_name | default(certbot_domains | default([]) | first | default(inventory_hostname)) }}/privkey.pem
service auth {
  unix_listener /var/spool/postfix/private/auth {
    mode = 0660
    user = postfix
    group = postfix
  }
}
service lmtp {
  unix_listener /var/spool/postfix/private/dovecot-lmtp {
    mode = 0600
    user = postfix
    group = postfix
  }
}
userdb {
  driver = passwd
}
passdb {
  driver = pam
}
