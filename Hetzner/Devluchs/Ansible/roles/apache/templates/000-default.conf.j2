<VirtualHost *:80>
    ServerName {{ certbot_domains | default([]) | first | default(inventory_hostname) }}
    {% for domain in certbot_domains[1:] %}ServerAlias {{ domain }}
    {% endfor %}
    DocumentRoot /var/www/html

    ErrorLog ${APACHE_LOG_DIR}/error.log
    CustomLog ${APACHE_LOG_DIR}/access.log combined

    # ACME-Challenge bleibt auf HTTP erreichbar
    RewriteEngine On
    RewriteCond %{REQUEST_URI} !^/\.well-known/acme-challenge/
    RewriteRule ^/(.*)$ https://%{HTTP_HOST}/$1 [R=301,L]
</VirtualHost>
